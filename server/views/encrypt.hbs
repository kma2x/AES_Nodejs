<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <style>
        .file-area {
            width: 100%;
            position: relative;
            
        input[type=file] {
            position: absolute;
            width: 100%;
            height: 100%;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            opacity: 0;
            cursor: pointer;
        }
        
        .file-dummy {
            width: 100%;
            padding: 30px;
            background: rgba(255,255,255,0.2);
            border: 2px dashed rgba(255,255,255,0.2);
            text-align: center;
            transition: background 0.3s ease-in-out;
            
            .success {
            display: none;
            }
        }
        
        &:hover .file-dummy {
            background: rgba(255,255,255,0.1);
        }
        
        input[type=file]:focus + .file-dummy {
            outline: 2px solid rgba(255,255,255,0.5);
            outline: -webkit-focus-ring-color auto 5px;
        }
        
        }


        /* ===================== BASIC STYLING ===================== */

        * {
        box-sizing: border-box;
        font-family: 'Lato', sans-serif;
        }

        html,
        body {
            margin: 0;
            padding: 0;
            font-weight: 300;
            height: 100%;
            background: #053777;
            color: #fff;
            font-size: 16px;
            overflow: hidden;
            background: -moz-linear-gradient(top, #053777 0%, #00659b 100%);
            /* FF3.6+ */
            
            background: -webkit-gradient(linear, left top, left bottom, color-stop(0%, #053777), color-stop(100%, #00659b));
            /* Chrome,Safari4+ */
            
            background: -webkit-linear-gradient(top, #053777 0%, #00659b 100%);
            /* Chrome10+,Safari5.1+ */
            
            background: -o-linear-gradient(top, #053777 0%, #00659b 100%);
            /* Opera 11.10+ */
            
            background: -ms-linear-gradient(top, #053777 0%, #00659b 100%);
            /* IE10+ */
            
            background: linear-gradient(to bottom, #053777 0%, #00659b 100%);
            /* W3C */
        }

        h1 {
            text-align: center;
            margin: 50px auto;
            font-weight: 100;
        }

        label {
            font-weight: 500;
            display: block;
            margin: 4px 0;
            text-transform: uppercase;
            font-size: 13px;
            overflow: hidden;
        
            span {
                float: right;
                text-transform: none;
                font-weight: 200;
                line-height: 1em;
                font-style: italic;
                opacity: 0.8;
            }
        }

        .form-controll {
            display: block;
            padding: 8px 16px;
            width: 100%;
            font-size: 16px;
            background-color: rgba(255,255,255,0.2);
            border: 1px solid rgba(255,255,255,0.3);
            color: #fff;
            font-weight: 200;
        
        &:focus {
            outline: 2px solid rgba(255,255,255,0.5);
            outline: -webkit-focus-ring-color auto 5px;
        }
        }

        input {
            padding: 8px 30px;
            margin: 8px 0;
            background: rgba(255,255,255,0.8);
            color: #053777;
            text-transform: uppercase;
            font-weight: 600;
            font-size: 11px;
            border: 0;
            cursor: pointer;
        }
        select {
            width: 100%;
            padding: 8px 15px;
            margin: 8px 0;
            display: inline-block;
            border: 1px solid #ccc;
            border-radius: 4px;
            box-sizing: border-box;
        }

        .container {
            max-width: 500px;
            margin: auto;
            margin-bottom: 30px;
        }

        .back-to-article {
            color: #fff;
            text-transform: uppercase;
            font-size: 12px;
            position: absolute;
            right: 20px;
            top: 20px;
            text-decoration: none;
            display: inline-block;
            background: rgba(0,0,0,0.6);
            padding: 10px 18px;
            transition: all 0.3s ease-in-out;
            opacity: 0.6;
        
        &:hover {
            opacity: 1;
            background: rgba(0,0,0,0.8);
        }
        }
    </style>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/axios/0.24.0/axios.min.js" integrity="sha512-u9akINsQsAkG9xjc1cnGF4zw5TFDwkxuc9vUp5dltDWYCSmyd0meygbvgXrlc/z7/o4a19Fb5V0OUE58J7dcyw==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
</head>
<body>

    <h1><strong>Encrypt</strong> </h1>
    <div class="container">
    <form id="form">
      <label for="bits">Bits</label>
       <select id="bits" name="bits">
         <option value="128">128</option>
          <option value="192">192</option>
          <option value="256">256</option>
        </select>

      <label for="title">Key</label>
      <input type="text" id="fname" name="key" class="form-controll" />
  
        <div class="file-area">
            <label for="file">Upload file</label>
            <input type="file" id="lname" name="file" accept=".jpg, .jpeg, .png, .txt">
        </div>
        <input type="submit" id="btn" value="Encrypt">
    </form>
    </div>
<script
  src="https://code.jquery.com/jquery-3.6.0.js"
  integrity="sha256-H+K7U5CnXl1h5ywQfKtSj8PCmoN9aaq30gDh27Xc0jk="
  crossorigin="anonymous"></script>
<script type="text/javascript">
    $(document).ready(function () {
        $("#form").submit(function (e){
            e.preventDefault();
            var formData = new FormData();
            let key = document.getElementById('fname').value;
            let bits = document.getElementById('bits').value;
            let file = document.getElementById('lname').files;
            
            if ($('#lname').get(0).files.length === 0) {
                alert("Please upload file");
                return;
            }
            if(!key || !bits) {
                alert("Please enter key and bits");
                return;
            }

            if(key.length !== (bits/8)) {
                alert("Please enter correct syntax key");
                return;
            }
            
            formData.append('key', key);
            formData.append('bits', bits);
            for(let i = 0; i < file.length; i++) {
                formData.append("file", file[i]);
            }
            const contentType = {
                headers: {
                    "content-type": "multipart/form-data"
                }
            }
            axios.post('/encrypt', formData, contentType)
            .then((res) => { 
                alert("File encrypted and sent successfully");
            })
            .catch(err => {
                console.log(err);
            })
        })
    });
    
    
</script>
</body>
</html>
